// Função assíncrona para obter clima de uma cidade
async function getWeather(city) {
  const apiKey = 'YOUR_API_KEY'; // Substitua com sua chave de API do OpenWeatherMap
  const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;

  try {
    const response = await fetch(url);
    if (!response.ok) {
      throw new Error('Cidade não encontrada');
    }
    const weatherData = await response.json();
    return weatherData;
  } catch (error) {
    console.error('Erro ao buscar clima:', error);
  }
}

// Função para exibir os dados do clima
function displayWeather(data) {
  const { main, weather, name } = data;
  console.log(`Cidade: ${name}`);
  console.log(`Temperatura: ${main.temp}°C`);
  console.log(`Clima: ${weather[0].description}`);
}

const city = 'São Paulo';
getWeather(city).then((data) => {
  if (data) {
    displayWeather(data);
  }
});
